{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "hiddenpg.ca" }],
      "destination": "https://hiddenprincegeorge.ca/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.hiddenpg.ca" }],
      "destination": "https://hiddenprincegeorge.ca/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.hiddenprincegeorge.ca" }],
      "destination": "https://hiddenprincegeorge.ca/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(favicon\\.ico|favicon-.*\\.ico|favicon.*\\.png|logo-512\\.png|site\\.webmanifest)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=0, must-revalidate" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, s-maxage=0, must-revalidate" }
      ]
    },
    {
      "source": "/favicon-check.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, s-maxage=0, must-revalidate" }
      ]
    }
  ]
}
